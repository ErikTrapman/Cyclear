{% extends 'base.html.twig' %}

{% block title "Posities" %}

{% block content %}
    <div class="big-header hidden-xs hidden-sm">
        <h2>Posities {{ seizoen }}</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <ul class="nav nav-pills" style="margin-bottom: 10px;">
                    {% for i in 1..20 %}
                        <li {% if i == positie %} class="active" {% endif %}><a
                                    href="{{ path('uitslag_posities', {'seizoen': seizoen.slug, 'positie': i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                </ul>
                {% include "uitslag/viewByPosition.html.twig" %}

            </div>
        </div>
    </div>

{% endblock %}
