{% extends '::admin.base_normal.twig' %}

{% block title %}Wedstrijd index{% endblock %}

{% block content %}
    <h3>Wedstrijden</h3>

    <table class="table table-bordered table-striped">

        <tr>
            <th>Id</th>
            <th>Naam</th>
            <th>Datum</th>
            <th>&nbsp;</th>
        </tr>


        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('admin_wedstrijd_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.naam }}</td>
                <td>{{ entity.datum|date('d-m-Y') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_wedstrijd_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}

    </table>
    <div id="navigation">
        {{ knp_pagination_render(pagination, null, {}, {'firstPageRoute': 'admin_wedstrijd'}) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('admin_wedstrijd_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}