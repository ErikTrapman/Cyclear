{% extends 'base.html.twig' %}

{% block title 'Ploegen' %}

{% block content %}
    <table class="table table-bordered table-striped">

        <tr>
            <th>Id</th>
            <th>Naam</th>
            <th>Punten</th>
        </tr>

        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ploeg_show', {id: entity.id}) }}">{{ entity.id }}</a></td>
                <td>{{ entity.naam }}</td>
                <td>{{ entity.punten }}</td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}
