{% extends 'admin.base_normal.twig' %}

{% form_theme edit_form _self %}

{% block _cyclear_gamebundle_nieuwstype_content_widget %}
    {{ form_widget(form, {'attr': {'class': 'field span5'}}) }}
{% endblock %}

{% block content %}

    <h3>Nieuws edit</h3>

    <form action="{{ path('admin_nieuws_update', {'id': entity.id}) }}" method="post" >
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn btn-default" type="submit">Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_nieuws') }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('admin_nieuws_delete', {'id': entity.id}) }}" method="post">
                {{ form_widget(delete_form) }}
                <button class="btn btn-default" type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
