{% extends 'admin.base_normal.twig' %}

{% block content %}
    <h3>Uitslagtypen</h3>

    <table class="table table-bordered table-striped">

        <tr>
            <th>Id</th>
            <th>Naam</th>
            <th>Max. resultaten</th>
            <th>Alg. klassement</th>
            <th>&nbsp;</th>
        </tr>


        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_uitslagtype_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.naam }}</td>
                <td>{{ entity.maxResults }}</td>
                <td>{{ entity.isGeneralClassification }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_uitslagtype_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}

    </table>

    <ul>
        <li>
            <a href="{{ path('admin_uitslagtype_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}