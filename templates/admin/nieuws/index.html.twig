{% extends 'admin.base_normal.twig' %}

{% block content %}
    <h3>Nieuws</h3>

    <table class="table table-bordered table-striped">

        <tr>
            <th>Id</th>
            <th colspan="2">Titel</th>
        </tr>

        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_nieuws_edit', {'id': entity.id}) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titel }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_nieuws_edit', {'id': entity.id}) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}

    </table>
    <div id="navigation">
        {{ knp_pagination_render(entities, null, {}, {'firstPageRoute': 'admin_contract'}) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('admin_nieuws_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
