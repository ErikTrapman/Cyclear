{% extends 'admin.base_normal.twig' %}

{% block title %}Transfer edit{% endblock %}

{% form_theme edit_form _self %}

{% block content %}

    <h3>Transfer edit</h3>

    <form action="{{ path('admin_transfer_update', {id: entity.id}) }}" method="post" >
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn btn-default" type="submit">Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_transfer') }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('admin_transfer_delete', {id: entity.id}) }}" method="post">
                {{ form_widget(delete_form) }}
                <button class="btn btn-default" type="submit">Delete</button>
            </form>

        </li>
    </ul>
{% endblock %}
