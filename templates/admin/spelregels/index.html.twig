{% extends 'admin.base_normal.twig' %}

{% block content %}
    <h3>Spelregels</h3>

    <table class="table table-bordered table-striped">

        <tr>
            <th>Id</th>
            <th>Seizoen</th>
            <th>&nbsp;</th>
        </tr>

        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_spelregels_edit', {'id': entity.id}) }}">{{ entity.id }}</a></td>
                <td>{{ entity.seizoen.identifier }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_spelregels_edit', {'id': entity.id}) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}

    </table>

    <ul>
        <li>
            <a href="{{ path('admin_spelregels_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
