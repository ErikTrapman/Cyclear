{% extends '::admin.base_normal.twig' %}

{% block content -%}
    <h1>AwardedBadge list</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Badge</th>
                <th>Recurringamount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_awardedbadge_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.user }}</td>
                <td>{{ entity.badge }}</td>
                <td>{{ entity.recurringAmount }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_awardedbadge_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_awardedbadge_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_awardedbadge_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
