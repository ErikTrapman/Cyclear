{% extends 'admin.base_normal.twig' %}

{% block content %}
    <h3>Seizoenen</h3>

    <table class="table table-bordered table-striped">

        <tr>
            <th>Id</th>
            <th>Identifier</th>
            <th>Huidig seizoen</th>
            <th>Gesloten</th>
            <th>&nbsp;</th>
        </tr>

        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_seizoen_edit', {id: entity.id}) }}">{{ entity.id }}</a></td>
                <td>{{ entity.identifier }}</td>
                <td>{{ entity.current }}</td>
                <td>{{ entity.closed }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_seizoen_edit', {id: entity.id}) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}

    </table>
    <div class="alert alert-info">
        Let op, als je een nieuw seizoen aanmaakt worden andere seizoen automatisch gesloten en als niet-huidig
        aangeduid.
    </div>
    <ul>
        <li>
            <a href="{{ path('admin_seizoen_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
