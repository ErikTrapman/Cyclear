<form class="form form-inline fos_user_resetting_request" action="{{ path('fos_user_resetting_send_email') }}" 
      method="POST" 
            {% if invalid_username is defined %}
                <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
            {% endif %}
            <label class="control-label required" for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
            <input type="text" id="username" name="username" required="required" />
            <button class="btn" type="submit">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
</form>