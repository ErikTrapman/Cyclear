{% extends '::admin.base.html.twig' %}

{% block content %}
<h2>Periode edit</h2>

<form action="{{ path('admin_periode_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_periode') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_periode_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}