{% block content %}
<table class="records_list table table-condensed ">
    <thead>
        <tr>
            <th/>
            <th>Ploeg</th>
            <th/>
            <th>Punten</th>
        </tr>
    </thead>
    <tbody>
    {% for ploeg in list %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ ploeg.naam }}</td>
            <td>{{ ploeg.afkorting }}</td>
            <td>{{ ploeg.punten }}</td>
        </tr>
    {% endfor %}
        {% if periode is defined %}
            <tr><td colspan="4"><a href="{{ path('uitslag_periodes', {'seizoen':seizoen.slug,'periode_id':periode.id} ) }}">Alle periodes</a></td></tr>
        {% endif %}
    </tbody>
</table>
{% endblock %}