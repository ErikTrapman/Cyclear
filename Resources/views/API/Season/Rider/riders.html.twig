{% extends '::base.html.twig' %}

{% block title "Renners" %}

{% block content %}
<div class="span5">
    
    <form action="" method="get">
        <input type="text" name="query">
        <button class="btn" type="submit">Zoek</button>
    </form>
    
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Renner</th>
                <th>Ploeg</th>
                <th/>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
        {% set rennerploegIndex = rennerRepo.getPloeg(entity.id, seizoen) %}
        {% set ingelogdPloeg = app.request.attributes.get('seizoen-ploeg') %}
        <tr>
            <td nowrap>{% include "CyclearGameBundle:Renner:_singleRow.html.twig" with {'renner':rennerRepo.find(entity.id),'seizoen':seizoen } %}</td>
            <td>{% if rennerploegIndex %}{{ rennerploegIndex.afkorting }}{% else %}-{% endif %}</td>
            <td>
                {% include "CyclearGameBundle:Renner:_singleRowActions.html.twig" with {"ploeg":app.request.attributes.get('seizoen-ploeg'), "renner":entity,"seizoen":seizoen } %}
            </td>
        </tr>
    {% endfor %}      
        </tbody>
    </table>
    <div id="navigation">
        {{ knp_pagination_render(entities, null, {}, {'firstPageRoute': 'get_season_riders'}) }}
    </div>
</div>


<div class="span6">
    
    
        <ul class="nav nav-tabs" id="tabs">
            <li class="active"><a data-toggle="tab" href="#leaderboard">Leaderboard</a></li>
            <li><a data-toggle="tab" href="#available">Vrij</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="leaderboard">
                {% include 'CyclearGameBundle:Renner:viewWithPunten.html.twig' with { listWithPunten: with_team} %}
            </div>
            <div class="tab-pane" id="available">
                {% include 'CyclearGameBundle:Renner:viewWithPunten.html.twig' with { listWithPunten: without_team } %}
            </div>
        </div>
</div>


{% endblock %}