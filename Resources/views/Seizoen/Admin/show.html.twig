{% extends '::admin.base.html.twig' %}

{% block content %}
<h1>Periode</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th><td>{{ entity.id }}</td></tr>
        <tr>
            <th>Identifier</th>                <td>{{ entity.identifier }}</td></tr>
        <tr>
            <th>Huidig</th>                <td>{{ entity.current }}</td>        </tr>

    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_seizoen') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_seizoen_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_seizoen_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}