{% extends '::base.html.twig' %}

{% block title "Renner" %}

{% block content %}

<form action="{{ path('renner', {"seizoen":seizoen}) }}" method="post" {{ form_enctype(filter) }}>
    {{ form_widget(filter) }}
    <p>
        <button type="submit">Zoek</button>
    </p>
</form>

<table class="records_list table ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Naam</th>
            <th>Ploeg</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pagination %}
        <tr>
            <td><a href="{{ path('renner_show', { 'renner': entity.id, 'seizoen':seizoen.slug  }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.naam }}</td>
            <td>{% if entity.ploeg %}{{ entity.ploeg.naam }}{% else %}-{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_transfer', { seizoen:seizoen.slug, id:5, renner_id:entity.id} ) }}">transfer</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div id="navigation">
    {{ pagination.render()|raw }}
</div>
{% endblock %}