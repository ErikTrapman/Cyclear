{% block content %}
<table class="records_list table table-condensed">
    <thead>
        <tr>
            <th/>
            <th>Renner</th>
            <th>Ploeg</th>
            <th class="text-right">Punten</th>
        </tr>
    </thead>
    <tbody>
    {% for renner in listWithPunten %}
            {% set rennerploeg = rennerRepo.getPloeg(renner[0], seizoen) %}
        <tr>
            <td>{{ loop.index }}</td>
            <td nowrap>{% include "CyclearGameBundle:Renner:_singleRow.html.twig" with {"renner":renner[0],"seizoen":seizoen } %}</td>
            <td>{% if rennerploeg %}{{ rennerploeg.afkorting }}{% else %}-{% endif %}</td>
            <td class="text-right">{{ renner.punten }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}