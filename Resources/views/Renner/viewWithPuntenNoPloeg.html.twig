{% block content %}
<table class="records_list table table-condensed ">
    <thead>
        <tr>
            <th/>
            <th>Renner</th>
            <th>Ploeg</th>
            <th>Punten</th>
            <th/>
        </tr>
    </thead>
    <tbody>
    {% for renner in listWithPuntenNoPloeg %}
            {% set rennerploeg = rennerRepo.getPloeg(renner[0], seizoen) %}
        <tr>
            <td>{{ loop.index }}</td>
            <td><a href="{{ path('renner_show', { 'renner': renner[0].id, 'seizoen':seizoen.slug  }) }}">{{ renner[0].naam }}</a></td>
            <td>{% if rennerploeg %}{{ rennerploeg.afkorting }}{% else %}-{% endif %}</td>
            <td>{{ renner.punten }}</td>
            <td>
                {% if is_granted("ROLE_USER") %}
                    <a href="{{ path('user_transfer', { seizoen:seizoen.slug, id:app.request.attributes.get('seizoen-ploeg').id, renner_id:renner[0].id} ) }}">
                        <img src="/bundles/cycleargame/icons/famfamfam/coins_add.png">
                    </a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}