{% extends '::base.html.twig' %}

{% block title %}{{ renner.naam }}{% endblock %}

{% block content %}

{% set ingelogdPloeg = app.request.attributes.get('seizoen-ploeg') %}
<h2>{% include "CyclearGameBundle:Country:_image.html.twig" with {'size':32,'country':renner.country } %} {{ renner.naam }}{% if ploeg is not null %} - {{ ploeg.naam }}{% else %} - vrij {% spaceless %}
{% if is_granted("ROLE_USER") and ingelogdPloeg is not null %}
    <a href="{{ path('user_transfer', { seizoen:seizoen.slug, id:app.request.attributes.get('seizoen-ploeg').id, renner_id:renner.id} ) }}">
        <img src="/bundles/cycleargame/icons/famfamfam/coins_add.png">
    </a>{% endif %}{% endspaceless %}{% endif %}
</h2>
<h3>Uitslagen</h3>
{% include "CyclearGameBundle:Uitslag:_listRenner.html.twig" with {'uitslagen':uitslagen,'show_rider':false} %}
<h3>Transfers</h3>
{% include "CyclearGameBundle:Transfer:_listWithInversion.html.twig" with {'listWithInversion':transfers} %}
{% endblock %}