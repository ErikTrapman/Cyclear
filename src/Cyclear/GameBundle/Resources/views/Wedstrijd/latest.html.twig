{% block content %}
    <script type="text/javascript">
        function toggleResults(e, id) {
            e.preventDefault();
            $(".results_match_" + id).toggle();
        }
    </script>
    <table class="table table-bordered table-striped">
        <tr>
            <th class="hidden-xs hidden-sm">Datum</th>
            <th colspan="6">Uitslagen</th>
        </tr>

        {% for wedstrijd in wedstrijden %}
            <tr>
                <td class="hidden-xs hidden-sm">
                    {{ wedstrijd.datum|date('d M') }}
                </td>
                <td colspan="4">
                    {#{% include "CyclearGameBundle:Wedstrijd:_singleRow.html.twig" with {wedstrijd:wedstrijd, seizoen:wedstrijd.seizoen } %}#}
                    <a href="javascript:void(0);"
                       onclick="toggleResults(event, {{ wedstrijd.id }})">{{ wedstrijd.naam }}</a>

                </td>
                <td>
                    {% if wedstrijd.generalClassification %}
                        <a href="{{ path('wedstrijd_show', {seizoen: seizoen.slug, wedstrijd: wedstrijd.id}) }}">Meer</a>
                    {% endif %}
                </td>
            </tr>

            <tr class="results_match_{{ wedstrijd.id }}" style="display: none;">
                <td colspan="6" style="padding-left:0; margin-left:1px">
                    <div class="row">
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <table class="table table-bordered table-striped">
                                {% for uitslag in wedstrijd.uitslagen %}
                                    <tr>
                                        <td class="hidden-xs hidden-sm">{{ "%02d"|format(loop.index) }}</td>
                                        <td>{% if uitslag.ploeg %}{{ uitslag.ploeg.afkorting }}{% endif %}</td>
                                        <td>{% include '@CyclearGame/Uitslag/_singlePoints.html.twig' with {uitslag: uitslag} %}</td>
                                        <td nowrap>{% include "CyclearGameBundle:Renner:_singleRow.html.twig" with {renner:uitslag.renner,seizoen:uitslag.wedstrijd.seizoen } %}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <table class="table table-bordered table-striped">
                                {% for uitslag in wedstrijd.getUitslagenGrouped %}
                                    <tr>
                                        <td class="hidden-xs hidden-sm">{{ "%02d"|format(loop.index) }}</td>
                                        <td>{{ uitslag.ploeg }}</td>
                                        <td>{{ uitslag.total }}</td>
                                        <td class="hidden-xs hidden-sm">{{ uitslag.hits }}x</td>
                                        <td class="hidden-md hidden-lg" style="width:98%">{{ uitslag.hits }}x</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>

                    </div>
                </td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}