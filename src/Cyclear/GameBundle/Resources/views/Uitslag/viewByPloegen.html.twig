{% block content %}
    <table class="records_list table table-condensed ">
        <thead>
        <tr>
            <th/>
            <th>Ploeg</th>
            <th/>
            <th>Punten</th>
        </tr>
        </thead>
        <tbody>
        {% for ploeg in list %}
            <tr>
                {% set curpos = "%02d"|format(loop.index) %}
                {% if shadowlist %}
                    {% set prevpos =  shadowlist[ploeg[0].id].position %}
                    {% set posdiff = prevpos - curpos %}
                    <!--

                    <img src="/bundles/cycleargame/icons/famfamfam/bullet_red.png"/>
                    -->
                    <td>
                        {% spaceless %}
                            {{ curpos }}
                            {% if posdiff > 0 %}
                                <img title=" + {{ posdiff }} " src="/bundles/cycleargame/icons/famfamfam/bullet_green.png"/>
                                {% elseif posdiff < 0 %}
                                <img title=" {{ posdiff }} " src="/bundles/cycleargame/icons/famfamfam/bullet_red.png"/>
                            {% endif %}

                        {% endspaceless %}
                    </td>
                {% else %}
                    <td>{{ curpos }}</td>
                {% endif %}


                <td>
                    <a href="{{ path('ploeg_show', { "seizoen": seizoen.slug, id:ploeg[0].id}) }}">{{ ploeg[0].naam }}</a>
                </td>
                <td>{{ ploeg[0].afkorting }}</td>
                {% if shadowlist %}
                    <td>{{ ploeg.punten }} [+{{ ploeg.punten - shadowlist[ploeg[0].id].punten }}]</td>
                {% else %}
                    <td>{{ ploeg.punten }}</td>
                {% endif %}

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}